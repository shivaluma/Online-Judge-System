{
  "swagger": "2.0",
  "info": {
    "description": "API for Online Judge System",
    "version": "1.0.0",
    "title": "BrosJudge API",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "shivaluma@gmail.com"
    },
